{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}Cambiar Contraseña{% endblock %}

{% block user %}
    <section class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h1 class="page-header">Cambiar Contraseña</h1>
                {{ form_start(form, {'style' : 'horizontal', 'label_col' : 4 , 'widget_col' : 8, 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
                    {{ form_widget(form) }}
                    <div class="form-group">
                        <div class="col-md-8 col-md-offset-4">
                            <input type="submit" value="{{ 'change_password.submit'|trans }}" class="btn btn-default"/>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock %}

{% block stylesheet %}
    <style type="text/css">
        section {
            padding: 80px 0px;
        }
    </style>
{% endblock %}