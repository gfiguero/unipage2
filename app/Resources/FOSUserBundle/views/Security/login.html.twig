{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}Ingreso de Usuarios{% endblock %}

{% block user %}
    <section class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h1 class="page-header">Ingreso de Usuarios</h1>
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}
                    
                    <div class="form-group">
                        <label for="username" class="control-label col-sm-4">{{ 'security.login.username'|trans }}</label>
                        <div class="col-sm-8">
                            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password" class="control-label col-sm-4">{{ 'security.login.password'|trans }}</label>
                        <div class="col-sm-8">
                            <input type="password" id="password" name="_password" required="required" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group"> 
                        <div class="col-sm-8 col-sm-offset-4">
                            <div class="checkbox">
                                <label for="remember_me">
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                    {{ 'security.login.remember_me'|trans }}
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">        
                        <div class="col-sm-8 col-sm-offset-4">
                            <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-default" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
{% endblock %}

{% block stylesheet %}
    <style type="text/css">
        section {
            padding: 80px 0px;
        }
    </style>
{% endblock %}