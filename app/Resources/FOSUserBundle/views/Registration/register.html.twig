{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}Registro de Usuarios{% endblock %}

{% block controlpanel %}
    <section id="uiuser">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="panel panel-default uiuser-panel">
                        <div class="panel-body">
                            <h1 class="page-header">Registro de Usuarios</h1>
                            {{ form_start(form, {'style' : 'horizontal', 'label_col' : 4 , 'widget_col' : 8, 'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
                                {{ form_widget(form) }}
                                <div class="form-group">
                                    <div class="col-md-8 col-md-offset-4">
                                        <input class="btn btn-default btn-primary" type="submit" value="{{ 'registration.submit'|trans }}" />
                                    </div>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
