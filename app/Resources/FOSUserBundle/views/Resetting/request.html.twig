{% extends 'UniPageBundle:Page:base.html.twig' %}
{% use 'UniPageBundle:Page:navbar.html.twig' %}
{% use 'UniPageBundle:Page:footer.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}Registro{% endblock %}

{% block body %}
    {% block navbar %}{{ parent() }}{% endblock %}
    <section class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h1 class="page-header">Restablecer Contrase√±a</h1>
                <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request form-horizontal">
                    <div class="form-group">
                        <label for="username" class="control-label col-sm-4">{{ 'resetting.request.username'|trans }}</label>
                        <div class="col-sm-8">
                            <input type="text" id="username" name="username" required="required" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-8 col-lg-offset-4 col-xs-8 col-xs-offset-4 col-md-8 col-md-offset-4 col-sm-8 col-sm-offset-4 col-xs-8 col-xs-offset-4">
                            <input type="submit" value="{{ 'resetting.request.submit'|trans }}" class="btn btn-default" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
    {% block footer %}{{ parent() }}{% endblock %}
{% endblock %}

{% block stylesheet %}
    <style type="text/css">
        section {
            padding: 80px 0px;
        }
    </style>
{% endblock %}