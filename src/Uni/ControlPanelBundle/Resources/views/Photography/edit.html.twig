{% extends 'UniControlPanelBundle:Base:layout.html.twig' %}

{% trans_default_domain 'UniControlPanelBundle' %}

{% block title %}{{ 'photography.index.title'|trans }}{% endblock %}

{% block controlpanel %}
    <section id="controlpanel">
        <div class="container">
            <div class="row" id="page-heading">
                <div class="col-sm-12">
                    <h1 class="page-header">{{ 'photography.index.title'|trans }}</h1>
                    {% block flashbag %}{{ parent() }}{% endblock %}
                </div>
            </div>
            <!-- /#page-heading -->

            <div class="row" id="page-toolbar">
                <div class="col-lg-12">
                    <div class="btn-toolbar">
                        <a type="button" class="btn btn-default" href="{{ path('controlpanel_photography_index') }}">{{ icon('list fa-fw') }}&nbsp;{{ 'photography.index.link'|trans }}</a>
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">{{ icon('trash-o fa-fw') }}&nbsp;{{ 'photography.delete.link'|trans }}</button>
                    </div>
                </div>
            </div>
            <!-- /#page-toolbar -->

            <div class="row" id="page-edit">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h2 class="panel-title">{{ 'photography.edit.form'|trans }}</h2>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-sm-4">
                                    {% if photography.image %}<img class="img-responsive" src="{{ vich_uploader_asset(photography, 'imagefile', 'Uni\\AdminBundle\\Entity\\Feature')|imagine_filter('photography_photography') }}">{% endif %}
                                </div>
                                <div class="col-sm-8">
                                    {{ form_start(editForm, { 'style': 'horizontal' }) }}
                                        {{ form_widget(editForm) }}
                                        <div class="form-group">
                                            <div class="col-lg-offset-4 col-lg-8">
                                                <button type="submit" class="btn btn-primary">{{ icon('save fa-fw') }}&nbsp;{{ 'photography.edit.submit'|trans }}</button>
                                            </div>
                                        </div>
                                    {{ form_end(editForm) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /#page-edit -->

            <div id="page-modal">
                <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog modal-md" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                                <h4 class="modal-title" id="myModalLabel">{{ 'photography.delete.form'|trans }}</h4>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                    <div class="col-xs-10"><p>{{ 'photography.delete.message'|trans }}</p></div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                {{ form_start(deleteForm) }}
                                    <button type="submit" class="btn btn-danger pull-right">{{ icon('trash fa-fw') }}&nbsp;{{ 'photography.delete.submit'|trans }}</button>
                                {{ form_end(deleteForm) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /#page-modal -->

        </div>
    </section>
{% endblock %}

{% block javascript %}
<script type="text/javascript">
var fileinputOptions = {
    'showRemove':false,
    'showUpload':false,
    'showClose':false,
    'showCancel':false,
    'browseIcon':'{{ icon("folder-open") }}&nbsp;',
    'browseLabel':'Buscar...',
}
$("#uni_pagebundle_photography_imagefile").fileinput(fileinputOptions);
</script>
{% endblock %}