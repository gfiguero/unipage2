{% extends 'UniControlPanelBundle:Base:layout.html.twig' %}

{% trans_default_domain 'UniControlPanelBundle' %}

{% block title %}{{ 'productcategory.show.title'|trans({'%id%':productCategory.id}) }}{% endblock %}

{% block controlpanel %}
    <section id="controlpanel">
        <div class="container">
            <div class="row" id="page-heading">
                <div class="col-sm-12">
                    <h1 class="page-header">{{ 'productcategory.show.title'|trans }}</h1>
                    {% block flashbag %}{{ parent() }}{% endblock %}
                </div>
            </div>
            <!-- /#page-heading -->

            <div class="row" id="page-toolbar">
                <div class="col-lg-12">
                    <div class="btn-toolbar">
                        <a type="button" class="btn btn-default" href="{{ path('controlpanel_productcategory_index') }}">{{ icon('list fa-fw') }}&nbsp;{{ 'productcategory.index.link'|trans }}</a>
                        <a type="button" class="btn btn-primary" href="{{ path('controlpanel_productcategory_edit', { 'id': productCategory.id }) }}">{{ icon('edit fa-fw') }}&nbsp;{{ 'productcategory.edit.link'|trans }}</a>
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">{{ icon('trash-o fa-fw') }}&nbsp;{{ 'productcategory.delete.link'|trans }}</button>
                    </div>
                </div>
            </div>
            <!-- /#page-toolbar -->

            <div class="row" id="page-show">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h2 class="panel-title">{{ 'productcategory.show.data'|trans }}</h2>
                        </div>
                        <div class="panel-body">
                            <dl class="dl-horizontal">
                                <dt>{{ 'productcategory.form.id'|trans }}</dt>
                                    <dd>{% if productCategory.id %}{{ productCategory.id }}{% endif %}</dd>
                                <dt>{{ 'productcategory.form.name'|trans }}</dt>
                                    <dd>{% if productCategory.name %}{{ productCategory.name }}{% endif %}</dd>
                                <dt>{{ 'productcategory.form.slug'|trans }}</dt>
                                    <dd>{% if productCategory.slug %}{{ productCategory.slug }}{% endif %}</dd>
                                <dt>{{ 'productcategory.form.createdAt'|trans }}</dt>
                                    <dd>{% if productCategory.createdAt %}{{ productCategory.createdAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}&nbsp;({{ productCategory.createdAt|ago }}){% endif %}</dd>
                                <dt>{{ 'productcategory.form.updatedAt'|trans }}</dt>
                                    <dd>{% if productCategory.updatedAt %}{{ productCategory.updatedAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}&nbsp;({{ productCategory.updatedAt|ago }}){% endif %}</dd>                        </dl>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /#page-show -->

            <div id="page-modal">
                <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog modal-md" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                                <h4 class="modal-title" id="myModalLabel">{{ 'productcategory.delete.title'|trans }}</h4>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                    <div class="col-xs-10"><p>{{ 'productcategory.delete.message'|trans }}</p></div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                {{ form_start(deleteForm) }}
                                    <button type="submit" class="btn btn-danger pull-right">{{ icon('trash-o fa-fw') }}&nbsp;{{ 'productcategory.delete.submit'|trans }}</button>
                                {{ form_end(deleteForm) }}
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /#page-modal -->

        </div>
    </section>
{% endblock %}

