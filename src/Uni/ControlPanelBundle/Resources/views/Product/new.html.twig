{% extends 'UniControlPanelBundle:Base:layout.html.twig' %}

{% trans_default_domain 'UniControlPanelBundle' %}

{% block title %}{{ 'product.index.title'|trans }}{% endblock %}

{% block controlpanel %}
    <section id="controlpanel">
        <div class="container">
            <div class="row" id="page-heading">
                <div class="col-sm-12">
                    <h1 class="page-header">{{ 'product.index.title'|trans }}</h1>
                    {% block flashbag %}{{ parent() }}{% endblock %}
                </div>
            </div>
            <!-- /#page-heading -->

            <div class="row" id="page-toolbar">
                <div class="col-lg-12">
                    <div class="btn-toolbar">
                        <a type="button" class="btn btn-default" href="{{ path('controlpanel_product_index') }}">{{ icon('list fa-fw') }}&nbsp;{{ 'product.index.link'|trans }}</a>
                    </div>
                </div>
            </div>
            <!-- /#page-toolbar -->

            <div class="row" id="page-new">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h2 class="panel-title">{{ 'product.new.form'|trans }}</h2>
                        </div>
                        <div class="panel-body">
                            {{ form_start(newForm, { 'style': 'horizontal' }) }}
                                {{ form_widget(newForm) }}
                                <div class="form-group">
                                    <div class="col-lg-offset-4 col-lg-8">
                                        <button type="submit" class="btn btn-primary">{{ icon('save fa-fw') }}&nbsp;{{ 'product.new.submit'|trans }}</button>
                                    </div>
                                </div>
                            {{ form_end(newForm) }}
                        </div>
                    </div>
                </div>
            </div>
            <!-- /#page-new -->

        </div>
    </section>
{% endblock %}

{% block javascript %}
<script type="text/javascript">
var fileinputOptions = {
    'showRemove':false,
    'showUpload':false,
    'showClose':false,
    'showCancel':false,
    'browseIcon':'{{ icon("folder-open") }}&nbsp;',
    'browseLabel':'Buscar...',
}
$("#uni_pagebundle_product_imagefile").fileinput(fileinputOptions);
</script>
{% endblock %}