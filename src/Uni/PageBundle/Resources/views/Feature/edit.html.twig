{% extends 'UniPageBundle:Page:base.html.twig' %}
{% use 'UniPageBundle:Page:navbar.html.twig' %}
{% use 'UniPageBundle:Page:footer.html.twig' %}

{% trans_default_domain 'UniPageBundle' %}

{% block title %}Editar Mi Perfil{% endblock %}

{% block body %}
    {% block navbar %}{{ parent() }}{% endblock %}
        <section>
            <div class="container">
                <div class="row">
                    <div id="page-header">
                        <div class="col-lg-12">
                            <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'feature.edit.title'|trans({'%id%':feature.id}) }}</h1>
                            {% block flashbag %}{{ parent() }}{% endblock %}
                        </div>
                    </div>
                    <!-- /#page-header -->

                    <div class="row" id="page-toolbar">
                        <div class="col-lg-12">
                            <div class="btn-toolbar">
                                <a type="button" class="btn btn-default" href="{{ path('page_feature_index') }}">{{ icon('list fa-fw') }}&nbsp;{{ 'feature.index.link'|trans }}</a>
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">{{ icon('trash-o fa-fw') }}&nbsp;{{ 'feature.delete.link'|trans }}</button>
                            </div>
                        </div>
                    </div>
                    <!-- /#page-toolbar -->

                    <div class="row" id="page-edit">
                        <div class="col-lg-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h2 class="panel-title">{{ 'feature.edit.form'|trans }}</h2>
                                </div>
                                <div class="panel-body">
                                    {{ form_start(editForm, { 'style': 'horizontal' }) }}
                                        {{ form_widget(editForm) }}
                                            <div class="form-group"><div class="col-lg-offset-4 col-lg-8">
                                                <button type="submit" class="btn btn-primary">{{ icon('save fa-fw') }}&nbsp;{{ 'feature.edit.submit'|trans }}</button>
                                            </div></div>
                                    {{ form_end(editForm) }}
                                </div>
                            </div>
                        </div>
                    </div> <!-- /#page-edit -->
                    <div id="page-modal">
                        <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                            <div class="modal-dialog modal-md" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                                        <h4 class="modal-title" id="myModalLabel">{{ 'feature.delete.title'|trans }}</h4>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                            <div class="col-xs-10"><p>{{ 'feature.delete.message'|trans }}</p></div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        {{ form_start(deleteForm) }}
                                            <button type="submit" class="btn btn-danger pull-right">{{ icon('trash fa-fw') }}&nbsp;{{ 'feature.delete.submit'|trans }}</button>
                                        {{ form_end(deleteForm) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div><!-- /#page-modal -->
                </div>    
            </div>
        </section>
    {% block footer %}{{ parent() }}{% endblock %}
{% endblock %}
{% block stylesheet %}
    <style type="text/css">
        section {
            padding: 80px 0px;
        }
    </style>
{% endblock %}
