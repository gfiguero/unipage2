{% block feature %}
    {% trans_default_domain 'UniPageBundle' %}
     <section id="feature">
         <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <h1 class="text-center page-header feature-title">{{ 'feature.title'|trans }}</h1>
                    <p class="text-center feature-subtitle">{{ 'feature.subtitle'|trans }}</p>
                </div>
            </div>
            <div class="row feature-row">
                {% for item in [1,2,3,4,5,6] %}
                    <div class="col-sm-6 col-md-4 feature-col">
                        <div class="thumbnail feature-thumbnail">
                            <img class="feature-item-image" src="http://via.placeholder.com/800x600" alt="800x600">
                            <div class="caption">
                                <h3 class="feature-item-title text-center">{{ 'feature.item.title'|trans }}</h3>
                                <p class="feature-item-content text-center">{{ 'feature.item.content'|trans }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}