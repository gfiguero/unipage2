{% block feature %}
    {% trans_default_domain 'UniPageBundle' %}
     <section id="feature">
         <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <h1 class="section-header feature-title text-center">{{ user.featuretitle }}</h1>
                    <p class="feature-subtitle text-center">{{ user.featurecontent }}</p>
                </div>
            </div>
            <div class="row feature-row">
                {% for feature in features %}
                    <div class="col-sm-6 col-md-4 feature-col">
                        <div class="thumbnail feature-thumbnail">
                            <img class="feature-item-image" src="{{ vich_uploader_asset(feature, 'imagefile', 'Uni\\AdminBundle\\Entity\\Feature')|imagine_filter('feature_photography') }}">
                            <div class="caption">
                                <h3 class="feature-item-title text-center">{{ feature.title }}</h3>
                                <p class="feature-item-content text-center">{{ feature.content }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}