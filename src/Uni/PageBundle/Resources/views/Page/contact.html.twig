{% block contact %}
    {% trans_default_domain 'UniPageBundle' %}
    <section id="contact">
        <div class="container">

            <div class="row">
                <div class="col-md-12 text-center">
                    <h1 class="page-header contact-title">{{ user.contacttitle }}</h1>
                    <p>{{ user.contactcontent }}</p>
                </div>
            </div>

            <div class="row contact-info">
                <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                    <div class="panel panel-default contact-panel">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-xs-3 text-left">
                                    {{ icon('phone fa-fw fa-2x') }}
                                </div>
                                <div class="col-xs-9 text-right"><p>{{ user.contactphone }}</p></div>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default contact-panel">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-xs-3 text-left">
                                    {{ icon('envelope fa-fw fa-2x') }}
                                </div>
                                <div class="col-xs-9 text-right"><p>{{ user.contactemail }}</p></div>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default contact-panel">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-xs-3 text-left">
                                    {{ icon('map-marker fa-fw fa-2x') }}
                                </div>
                                <div class="col-xs-9 text-right"><p>{{ user.contactaddress }}</p></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
{% endblock %}