{% block about %}
    {% trans_default_domain 'UniPageBundle' %}
     <section id="about">
         <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h1 class="page-header">{{ 'about.title'|trans }}</h1>
                </div>
                {% for item in [1,2] %}
                    <div class="col-md-12 text-center">
                        <h2>{{ 'about.item.title'|trans }}</h2>
                        <p>{{ 'about.item.content'|trans }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}