{% extends 'UniPageBundle:Page:base.html.twig' %}
{% use 'UniPageBundle:Page:header.html.twig' %}
{% use 'UniPageBundle:Page:main.html.twig' %}
{% use 'UniPageBundle:Page:about.html.twig' %}
{% use 'UniPageBundle:Page:feature.html.twig' %}
{% use 'UniPageBundle:Page:contact.html.twig' %}
{% use 'UniPageBundle:Page:footer.html.twig' %}

{% block title %}{{ user.brand }}{% endblock %}

{% block body %}
    {% block header %}{{ parent() }}{% endblock %}
    {% block main %}{{ parent() }}{% endblock %}
    {% block about %}{{ parent() }}{% endblock %}
    {% block feature %}{{ parent() }}{% endblock %}
    {% block contact %}{{ parent() }}{% endblock %}
    {% block footer %}{{ parent() }}{% endblock %}
{% endblock %}

{% block stylesheet %}
    {% if photographies is not empty %}
        {% set photography1 = attribute(photographies, 1) %}
        <style type="text/css">main#main {background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url('{{ vich_uploader_asset(photography1, 'imagefile', 'Uni\\AdminBundle\\Entity\\Photography')|imagine_filter('main_photography') }}');}</style>
        {% if photographies|length > 1 %}
            {% set photography2 = attribute(photographies, 2) %}
            <style type="text/css">section#contact {background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url('{{ vich_uploader_asset(photography2, 'imagefile', 'Uni\\AdminBundle\\Entity\\Photography')|imagine_filter('main_photography') }}');}</style>
        {% endif %}
    {% endif %}
{% endblock %}