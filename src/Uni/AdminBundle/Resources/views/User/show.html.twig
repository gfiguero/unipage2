{% extends 'UniAdminBundle:Base:base.html.twig' %}
{% use 'UniAdminBundle:Base:navbar.html.twig' %}
{% use 'UniAdminBundle:Base:sidebar.html.twig' %}
{% use 'UniAdminBundle:Base:icons.html.twig' %}
{% use 'UniAdminBundle:Base:flashbag.html.twig' %}

{% trans_default_domain 'UniAdminBundle' %}

{% block title %}{{ 'user.show.title'|trans({'%id%':user.id}) }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'user.show.title'|trans({'%id%':user.id}) }}</h1>
                {% block flashbag %}{{ parent() }}{% endblock %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('admin_user_index') }}">{{ icon('list fa-fw') }}&nbsp;{{ 'user.index.link'|trans }}</a>
                    <a type="button" class="btn btn-primary" href="{{ path('admin_user_edit', { 'id': user.id }) }}">{{ icon('edit fa-fw') }}&nbsp;{{ 'user.edit.link'|trans }}</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">{{ icon('trash-o fa-fw') }}&nbsp;{{ 'user.delete.link'|trans }}</button>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-show">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'user.show.data'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>{{ 'user.form.id'|trans }}</dt>
                                <dd>{% if user.id %}{{ user.id }}{% endif %}</dd>
                            <dt>{{ 'user.form.brand'|trans }}</dt>
                                <dd>{% if user.brand %}{{ user.brand }}{% endif %}</dd>
                            <dt>{{ 'user.form.name'|trans }}</dt>
                                <dd>{% if user.name %}{{ user.name }}{% endif %}</dd>
                            <dt>{{ 'user.form.domain'|trans }}</dt>
                                <dd>{% if user.domain %}{{ user.domain }}{% endif %}</dd>
                            <dt>{{ 'user.form.location'|trans }}</dt>
                                <dd>{% if user.location %}{{ user.location }}{% endif %}</dd>
                            <dt>{{ 'user.form.brand_primary_color'|trans }}</dt>
                                <dd>{% if user.brandprimarycolor %}{{ user.brandprimarycolor }}{% endif %}</dd>
                            <dt>{{ 'user.form.brand_secondary_color'|trans }}</dt>
                                <dd>{% if user.brandsecondarycolor %}{{ user.brandsecondarycolor }}{% endif %}</dd>
                            <dt>{{ 'user.form.brand_tertiary_color'|trans }}</dt>
                                <dd>{% if user.brandtertiarycolor %}{{ user.brandtertiarycolor }}{% endif %}</dd>
                            <dt>{{ 'user.form.clientname'|trans }}</dt>
                                <dd>{% if user.clientname %}{{ user.clientname }}{% endif %}</dd>
                            <dt>{{ 'user.form.clientphone'|trans }}</dt>
                                <dd>{% if user.clientphone %}{{ user.clientphone }}{% endif %}</dd>
                            <dt>{{ 'user.form.clientemail'|trans }}</dt>
                                <dd>{% if user.clientemail %}{{ user.clientemail }}{% endif %}</dd>
                            <dt>{{ 'user.form.clientaddress'|trans }}</dt>
                                <dd>{% if user.clientaddress %}{{ user.clientaddress }}{% endif %}</dd>
                            <dt>{{ 'user.form.maintitle'|trans }}</dt>
                                <dd>{% if user.maintitle %}{{ user.maintitle }}{% endif %}</dd>
                            <dt>{{ 'user.form.mainsubtitle'|trans }}</dt>
                                <dd>{% if user.mainsubtitle %}{{ user.mainsubtitle }}{% endif %}</dd>
                            <dt>{{ 'user.form.maincalltoaction'|trans }}</dt>
                                <dd>{% if user.maincalltoaction %}{{ user.maincalltoaction }}{% endif %}</dd>
                            <dt>{{ 'user.form.abouttitle'|trans }}</dt>
                                <dd>{% if user.abouttitle %}{{ user.abouttitle }}{% endif %}</dd>
                            <dt>{{ 'user.form.aboutcontent'|trans }}</dt>
                                <dd>{% if user.aboutcontent %}{{ user.aboutcontent }}{% endif %}</dd>
                            <dt>{{ 'user.form.featuretitle'|trans }}</dt>
                                <dd>{% if user.featuretitle %}{{ user.featuretitle }}{% endif %}</dd>
                            <dt>{{ 'user.form.featurecontent'|trans }}</dt>
                                <dd>{% if user.featurecontent %}{{ user.featurecontent }}{% endif %}</dd>
                            <dt>{{ 'user.form.contacttitle'|trans }}</dt>
                                <dd>{% if user.contacttitle %}{{ user.contacttitle }}{% endif %}</dd>
                            <dt>{{ 'user.form.contactcontent'|trans }}</dt>
                                <dd>{% if user.contactcontent %}{{ user.contactcontent }}{% endif %}</dd>
                            <dt>{{ 'user.form.contactphone'|trans }}</dt>
                                <dd>{% if user.contactphone %}{{ user.contactphone }}{% endif %}</dd>
                            <dt>{{ 'user.form.contactemail'|trans }}</dt>
                                <dd>{% if user.contactemail %}{{ user.contactemail }}{% endif %}</dd>
                            <dt>{{ 'user.form.contactaddress'|trans }}</dt>
                                <dd>{% if user.contactaddress %}{{ user.contactaddress }}{% endif %}</dd>
                            <dt>{{ 'user.form.contactschedule'|trans }}</dt>
                                <dd>{% if user.contactschedule %}{{ user.contactschedule }}{% endif %}</dd>
                            <dt>{{ 'user.form.rrsstitle'|trans }}</dt>
                                <dd>{% if user.rrsstitle %}{{ user.rrsstitle }}{% endif %}</dd>
                            <dt>{{ 'user.form.rrsscontent'|trans }}</dt>
                                <dd>{% if user.rrsscontent %}{{ user.rrsscontent }}{% endif %}</dd>
                            <dt>{{ 'user.form.facebook'|trans }}</dt>
                                <dd>{% if user.facebook %}{{ user.facebook }}{% endif %}</dd>
                            <dt>{{ 'user.form.twitter'|trans }}</dt>
                                <dd>{% if user.twitter %}{{ user.twitter }}{% endif %}</dd>
                            <dt>{{ 'user.form.youtube'|trans }}</dt>
                                <dd>{% if user.youtube %}{{ user.youtube }}{% endif %}</dd>
                            <dt>{{ 'user.form.instagram'|trans }}</dt>
                                <dd>{% if user.instagram %}{{ user.instagram }}{% endif %}</dd>
                            <dt>{{ 'user.form.created_at'|trans }}</dt>
                                <dd>{% if user.createdat %}{{ user.createdat|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}&nbsp;({{ user.createdat|ago }}){% endif %}</dd>
                            <dt>{{ 'user.form.updated_at'|trans }}</dt>
                                <dd>{% if user.updatedat %}{{ user.updatedat|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' Y - HH:mm") }}&nbsp;({{ user.updatedat|ago }}){% endif %}</dd>                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-show -->

        <div id="page-modal">
            <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-md" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'user.delete.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                <div class="col-xs-10"><p>{{ 'user.delete.message'|trans }}</p></div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            {{ form_start(deleteForm) }}
                                <button type="submit" class="btn btn-danger pull-right">{{ icon('trash-o fa-fw') }}&nbsp;{{ 'user.delete.submit'|trans }}</button>
                            {{ form_end(deleteForm) }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- /#page-modal -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}

